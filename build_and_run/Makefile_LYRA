#$(EXE_ESSL): $(SRC)
#	$(FC) $(FFLAGS_ESSL) $^ -o $@ $(LDFLAGS_ESSL)
#	rm -rf *.o *.mod

$(EXE_SERIAL): $(SRC)
	$(FC) $(FFLAGS_SERIAL) $^ -o $@
	rm -rf *.o *.mod


.SUFFIXES:
.SUFFIXES: .c .o .f90 .cu .cpp .cuf
.PHONY: clean
clean:
	rm -rf *.o *.mod $(EXES)

