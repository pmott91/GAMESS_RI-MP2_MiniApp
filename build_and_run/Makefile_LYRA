EXE_SERIAL=rimp2-serial
FFLAGS_SERIAL= -g -e Z

EXES=$(EXE_HIPBLAS) $(EXE_SERIAL)

all: $(EXES)


##
##$(EXE_NVBLAS): $(SRC)
##	$(FC) $(FFLAGS_NVBLAS) $^ -o $@ $(LDFLAGS_NVBLAS)
##	rm -rf *.o *.mod
$(EXE_HIPBLAS): $(SRC)
	$(FC) $(FFLAGS_HIPBLAS) -c $(SRC_HIPBLASF)
	$(FC) $(FFLAGS_HIPBLAS) $^ -o $@ $(LDFLAGS_HIPBLAS)
	rm -rf *.o *.mod

#$(EXE_CUBLASXT): $(SRC)
#	$(FC) $(FFLAGS_CUBLASXT) -c $(SRC_CUBLASF)
